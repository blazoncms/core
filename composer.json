{
    "name": "blazoncms/core",
    "description": "Base package for Blazon CMS",
    "type": "library",
    "homepage": "https://github.com/blazoncms/core",
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Westin Shafer",
            "email": "shafer_w2002@yahoo.com"
        }
    ],
    "require": {
        "php": "^7.0",
        "zendframework/zend-component-installer": "^0.3.0",
        "zendframework/zend-expressive": "^1.0",
        "zendframework/zend-expressive-helpers": "^2.0",
        "zendframework/zend-stdlib": "^3.0",
        "zendframework/zend-expressive-fastroute": "^1.0",
        "zendframework/zend-servicemanager": "^3.0",
        "ocramius/proxy-manager": "^1.0 || ^2.0",
        "zendframework/zend-expressive-zendviewrenderer": "^1.0",
        "mtymek/expressive-config-manager": "^0.4.0",
        "dasprid/container-interop-doctrine": "^0.2.2",
        "doctrine/migrations": "^1.4",
        "gedmo/doctrine-extensions": "^2.4",
        "doctrine/data-fixtures": "^1.1",
        "zendframework/zend-cache": "^2.7"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.8",
        "squizlabs/php_codesniffer": "^2.3",
        "phpmd/phpmd" : "@stable"
    },
    "autoload": {
        "psr-4": {
            "BlazonCms\\Core\\": "src"
        }
    },
    "extra": {
        "zf": {
            "config-provider": "BlazonCms\\Installer\\Core"
        }
    },
    "bin": ["bin/cli-config.php"]
}
